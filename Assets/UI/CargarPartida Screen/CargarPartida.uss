.celda-cabecera {
    -unity-font-definition: resource('Fonts/Poppins-Bold');
    -unity-text-align: middle-left;
    padding-left: 5px;
    flex-grow: 1;
}

.celda-fila {
    -unity-font-definition: resource('Fonts/Poppins-SemiBold');
    -unity-text-align: middle-left;
    padding-left: 5px;
    flex-grow: 1;
}

.saves-scrollview {
    flex-grow: 1;
    overflow-y: auto;
    width: 100%;  
    max-height: 100%;
    align-self: center;
}

.popup-container {
    background-color: rgba(0,0,0,0.6);
}

.popup {
    background-color: #222;
    border-radius: 8px;
    padding: 20px;
}

.popup Label {
    color: white;
    font-size: 22px;
    text-align: center;
    -unity-font-definition: resource('Fonts/Poppins-Regular');
}

.popup-button-yes {
    width: 290px;
    height: 60px;
    background-color: rgb(24, 58, 39);
